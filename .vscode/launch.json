	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch via NPM",
			"runtimeExecutable": "npx",
			"runtimeArgs": [
				"hardhat",
				"deploy-fake-erc20"
			],
			"port": 9229,
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\dist\\src\\index.js",
			"preLaunchTask": "tsc: build - tsconfig.json",
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			]
		}
	]
}
