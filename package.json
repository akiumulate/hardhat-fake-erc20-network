        "@types/node": "^16.4.13",
        "@types/node-fetch": "^2.5.12",
        "chai": "^4.3.4",
        "husky": "^7.0.0",
        "mocha": "^9.0.3",
        "prettier": "2.3.2",
        "ts-node": "^10.1.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.3.0",
        "typescript": "^4.3.5"
